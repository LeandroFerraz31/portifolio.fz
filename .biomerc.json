{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery/noUnknownAtRules": "off",
      "correctness/noUnknownAtRules": "off",
      "stylistic/noUnknownAtRules": "off"
    }
  },
  "files": {
    "ignore": ["node_modules", "dist", "*.css"]
  }
}